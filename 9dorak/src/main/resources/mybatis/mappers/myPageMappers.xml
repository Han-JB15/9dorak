<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.firstzone.myPage">


	<select id="getMember" parameterType="String" resultType="memvo">
		SELECT
		* FROM MEM WHERE mem_id = #{login_id}
	</select>

	<update id="updateMember" parameterType="memvo">
		update mem
		set
		mem_pw =
		#{mem_pw},
		mem_name = #{mem_name},
		mem_bd=#{mem_bd}
		where
		mem_id=#{mem_id}

	</update>


	<delete id="deleteMember" parameterType="String">
		delete from mem
		where
		mem_id = #{mem_id}
	</delete>

	<select id="getDelivery" resultType="memdeliveryvo" parameterType="String">
		SELECT * FROM MEMDELIVERY where mem_id = #{mem_id}
	</select>

	<delete id="deleteDelivery" parameterType="memdeliveryvo">
		delete FROM MEMDELIVERY where mem_id = #{mem_id} and mem_delname = #{mem_delname}
	</delete>

</mapper>