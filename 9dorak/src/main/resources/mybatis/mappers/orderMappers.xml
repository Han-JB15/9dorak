<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.firstzone.order">

	<select id="selectAll" resultType="ordervo">
		select * from orders
	</select>
	
	<select id="searchadminOrder" resultType="ordervo" parameterType="String">
		SELECT * FROM orders WHERE mem_id LIKE '%'||#{mem_id}||'%' 
	</select>

	<select id="selectByOrderDetail" resultType="orderdetailvo" parameterType="orderdetailvo">
		SELECT orderdetail.*, orders.order_status
		FROM orderdetail
		JOIN orders ON orderdetail.order_no = orders.order_no
		WHERE orderdetail.order_no = #{order_no}
	</select>
	
	<delete id="deleteOrder" parameterType="int">
		delete from orders where order_no=#{order_no}
	</delete>

	<select id="selectByOrder" resultType="ordervo" parameterType="ordervo">
		select *
		from orders
		where order_no = #{order_no}
	</select>
	
	<update id="updateOrder" parameterType="ordervo">
		update orders set order_status='주문 취소' where order_no=#{order_no}
	</update>
	
</mapper>