<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.firstzone.yomo">

	<!-- 게시글 리스트 -->
	<select id="selectAll" resultType="annovo">
		select * from anno
	</select>

	<select id="selectByno" resultType="annovo" parameterType="int">
		select * from anno where anno_no = #{anno_no}
	</select>

	<select id="searchYomo" resultType="annovo"
		parameterType="String">
		SELECT * FROM anno WHERE anno_title LIKE
		'%'||#{anno_title}||'%'
	</select>
	
	<select id="selectOrderbyView" resultType="annovo">
		select * from anno order by anno_view desc
	</select>
	
	<select id="selectOrderbyNew" resultType="annovo">
		select * from anno order by anno_date desc
	</select>

</mapper>